# sshd_config
Port {{ sshd_port }}
PermitRootLogin {{ sshd_permit_root_login }}
PasswordAuthentication {{ sshd_password_authentication }}
PubkeyAuthentication {{ sshd_pubkey_authentication }}
ChallengeResponseAuthentication {{ sshd_challenge_response_auth }}
UsePAM {{ sshd_use_pam }}
# ssh log setting
SyslogFacility AUTH
LogLevel INFO